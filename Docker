# Use the official WeasyPrint base image (includes all deps)
FROM ghcr.io/kozea/weasyprint:base

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy your application code
COPY . .

# Expose the port your app runs on (usually 8000 or 5000)
EXPOSE 8000

# Command to run your Flask app with Gunicorn (recommended for production)
CMD ["gunicorn", "--bind", "0.0.0.0:8000", "app:app"]
